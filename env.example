# Database
DATABASE_URL=postgresql://user:password@localhost:5432/gpu_fleet

# Security
SECRET_KEY=your-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis
REDIS_URL=redis://localhost:6379

# GPU Providers
BASE_GPU_PROVIDER=rune.compute
SPOT_GPU_PROVIDER=sfcompute.com

# Model Settings
MODEL_CACHE_DIR=./model_cache
MAX_MODEL_CACHE_SIZE_GB=100

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Alert Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
ALERT_EMAIL=alerts@yourdomain.com

# Scaling
MIN_SPOT_INSTANCES=0
MAX_SPOT_INSTANCES=5
QUEUE_LENGTH_THRESHOLD=10
SPOT_PRICE_THRESHOLD=2.0

# Supabase Configuration (aligned with subconscious-systems)
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# When using Supabase, use this format for DATABASE_URL:
# DATABASE_URL=postgres://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
