# GPU Fleet Manager Environment Variables
# Make a copy of this file as .env and fill in the values

# Environment and Project Settings
ENVIRONMENT=development
PROJECT_NAME="GPU Fleet Manager"
API_VERSION=v1

# Database Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=gpu_fleet_manager
POSTGRES_SCHEMA=public
POSTGRES_SSL_MODE=require

# Supabase Settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=
SUPABASE_JWT_SECRET=

# GPU Provider Settings
# Options: on-premise, aws, gcp, azure
GPU_PROVIDER_TYPE=on-premise

# AWS Provider Settings (if using aws)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-west-2

# GCP Provider Settings (if using gcp)
# GCP_PROJECT_ID=
# GCP_CREDENTIALS_FILE=/path/to/credentials.json
# GCP_ZONE=us-central1-a

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false
API_WORKERS=1
API_CORS_ORIGINS=*
API_AUTH_REQUIRED=true

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
# LOG_FILE=/path/to/app.log

# Monitoring Settings
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090
ENABLE_TRACING=false
TRACING_PROVIDER=jaeger
# TRACING_ENDPOINT=http://jaeger:14268/api/traces

# Webhook Settings
WEBHOOK_SIGNING_SECRET=generate-a-secure-random-string
WEBHOOK_TIMEOUT_SECONDS=5
WEBHOOK_RETRY_ATTEMPTS=3

# Security Settings
SECRET_KEY=generate-a-secure-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
